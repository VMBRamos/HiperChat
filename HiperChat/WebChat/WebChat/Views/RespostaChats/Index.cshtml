@model IEnumerable<WebChat.Models.RespostaChat>

@{
    ViewData["Title"] = "Dados Gerais das Mensagens";
}

<h1>Menu de edições</h1>

<p>
    <a asp-action="Create">Adicionar nova mensagem</a>
</p>

<input type="text" name="Buscar" id="buscaMSG" 
placeholder = "Digite uma palavra-chave" />
<button id="btn"> <b><font color="black" size="3">Filtrar</font></b></button>



<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Resposta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mensagem)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Resposta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mensagem)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
<link href="~/css/BuscaMSG.css" rel="stylesheet" />
<script src="~/js/FiltrarMSG.js"></script>